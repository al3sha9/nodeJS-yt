<!doctype html>
<html>
<head>
    <title>Read User</title>
    <link rel="stylesheet" href="/public/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <section class="main w-full p-10 text-white h-full bg-zinc-900">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back Home</a>
        </div>
        <h1 class="tracking-tighter text-3xl mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach((user)=> { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                            <img src="<%= user.image%>" class="object-cover object-top w-full h-full "/>
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%=user.name%></h3>
                        <h5 class="text-zinc-500"><%=user.email%></h5>
                        <div class="flex gap-3 mt-10">
                            <a href="/edit/<%=user._id%>" class="text-zinc-200">Edit User</a>
                            <a href="/delete/<%=user._id%>" class="text-red-600">Delete User</a>
                        </div>
                    </div>

                    <% })%>
            <% } else { %>
                <h2 class="text-zinc-500">No Users Found</h2>
                <%}%>

        </div>
    </section>
</body>
</html>
