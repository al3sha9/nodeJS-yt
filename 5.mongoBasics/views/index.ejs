<!doctype html>
<html>
    <head>
        <title>Mongo DB project</title>
        <link src="/public/stylesheets/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>
    <body>
        <section class="main w-full p-10 text-white h-full bg-zinc-900">
            <div class="nav mb-10">
                <a href="/read" class="text-blue-500">All Users</a>
            </div>
            <h1 class="tracking-tighter text-3xl mb-3">Create User</h1>
            <form action="/create" method="POST">
                <input name="name" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your name">
                <input name="email" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your email">
                <input name="image" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your image URL">
                <input type="submit" value="Create User" class="px-5 py-3 bg-blue-500 rounded-lg ml-3 cursor-pointer "/>
            </form>
        </section>
    </body>
</html>
