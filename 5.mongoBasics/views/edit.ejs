<!doctype html>
<html>
    <head>
      <title>Edit <%= user.name%></title>
        <link src="/public/stylesheets/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>
    <body>
        <section class="main w-full p-10 text-white h-full bg-zinc-900">
            <div class="nav mb-10">
                <a href="/read" class="text-blue-500">All Users</a>
            </div>
            <h1 class="tracking-tighter text-3xl mb-3">Edit <%= user.name%></h1>
            <form action="/update/<%= user._id %>" method="POST">
                <input name="name" value="<%= user.name %>" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your name">
                <input name="email" value="<%= user.email %>" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your email">
                <input name="image" value="<%= user.image %>" class="px-5 py-3 bg-transparent border border-white rounded-md focus:outline-none focus:border-blue-500" type="text" placeholder="Enter your image URL">
                <input type="submit" value="Create User" class="px-5 py-3 bg-yellow-500 rounded-lg ml-3 cursor-pointer "/>
            </form>
        </section>
    </body>
</html>
