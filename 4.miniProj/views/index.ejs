<!doctype html>
<html>
    <head>
        <title>Mini Project</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>
    <body>
        <section>
            <div class="main w-full min-h-screen bg-zinc-900">
                <div class="form p-10">
                    <form action="/create" method="post"  class="text-white space-y-2">
                        <input name="title" class="block w-full rounded-md outline-none px-5 py-3 bg-zinc-600" type="text" placeholder="Title Here" />
                        <textarea name="description" class="block w-full rounded-md outline-none resize-none px-5 py-2 bg-zinc-600" placeholder="Task data goes here" ></textarea>
                        <input type="submit" class="bg-blue-600 px-5 py-2 rounded-md cursor-pointer" value="Submit Task">
                    </form>
                </div>
                <div class="tasks flex gap-3 flex-wrap p-10">
                    <% if (files.length > 0) { %>
                                        <% files.forEach(function(val) { %>
                                            <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800 text-white">
                                                <h1 class="text-2xl font-semibold tracking-tight text-wrap"><%=val%></h1>
                                                <div class="flex w-full mt-3 justify-between items-center">
                                                    <a href="/file/<%=val%>" class="text-blue-500 inline-block hover:underline">
                                                        Read More...
                                                    </a>
                                                    <a href="/edit/<%=val%>" class="text-zinc-500 inline-block hover:underline">
                                                        Edit Task
                                                    </a>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <h3 class="text-zinc-400">No tasks added</h3>
                                    <% } %>

                </div>
            </div>
        </section>
    </body>
</html>
